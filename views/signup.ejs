     background:#bbbb;
     border-radius: 10px;
     overflow: hidden;
     transition: max-height 0.2s ;
      
 }

 .extend {
     max-height: 480%;
 }

 .head {
     width: 100%;
     display: flex;
     height: 72px;
     border-bottom: 1px solid #34495E;
     justify-content: space-between;
 }

 .head a{
     height: 100%;
     padding: 0 28px;
     display: flex;
     align-items: center;
     justify-content: center;
     color: #34495E;
     font-size:20px;
     font-weight:500;
 }

 .head .selected {
     position: relative;
     color: #D35400;
     font-weight:700;
 }

 .head .selected:after {
     position: absolute;
     content: "";
     bottom: 0;
     left: 0;
     height: 5px;
     width: 100%;
     background: #D35400;
     border-radius: 99px 99px 0 0;
 }

 .tabs {
     height: calc(100% - 72px);
     display: flex;
 }

form { 
    width: 100%;
