}

.input input {
    width: 100%;
    font-size: 17px;
    background:white;
    border-radius: 8px;
    padding: 16px 18px 16px 51px;
    color: black;
    opacity: 1;
}

.input img {
    width: 16px;
    position: absolute;
    left: 19px;
}

.checkbox {
    height: 10px;
    display: flex;
    align-items: center;
	position: relative;
	cursor: pointer;
}

.checkbox input {
	position: absolute;
	opacity: 0;
	height: 0;
	width: 0;
}

.checkbox span {
	display: flex;
	align-items: center;
	color: #34495E;
	font-size: 16px;
	user-select: none;
}

.checkbox span:before {
	content: "";
	width: 22px;
	height: 22px;
	border-radius: 6px;
	margin-right: 16px;
    background-color: white;
    opacity:0.6; 
}

.checkbox:hover input ~ span:before {
    background-color: white;
    opacity:0.8;
}

.checkbox input:checked ~ span:before {
	background-image: url("checked2.png");
    background-size: cover;
    opacity: 1;
}

